@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.Title = "LoyaltyOne Developer Homework";
}

<div>
    <input type="text" name="inputName" id="inputName" placeholder="name" />
    &nbsp;
    <button onclick="return ButtonGetSubs_Click()">Get Submissions</button>
    &nbsp;
    <span id="inputNameValidationMsg" style="color:red;font-weight:bold;display:none;"></span>
